{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "address": {
          "type": "string"
        },
        "password": {
          "type": [
            "string",
            "null"
          ]
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Node"
          }
        }
      },
      "required": [
        "address"
      ]
    },
    "Node": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "payment": {
          "$ref": "#/definitions/Payment"
        },
        "Server": {
          "$ref": "#/definitions/Server"
        },
        "wallet": {
          "type": [
            "string",
            "null"
          ]
        },
        "isLive": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "paymentId",
        "serverId",
        "isLive"
      ]
    },
    "Server": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "ssh": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        },
        "node": {
          "anyOf": [
            {
              "$ref": "#/definitions/Node"
            },
            {
              "type": "null"
            }
          ]
        },
        "blockchain": {
          "$ref": "#/definitions/Blockchain"
        }
      },
      "required": [
        "ssh",
        "command",
        "active",
        "blockchainId"
      ]
    },
    "Payment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "tx": {
          "type": "string"
        },
        "duration": {
          "type": "integer",
          "default": 0
        },
        "node": {
          "anyOf": [
            {
              "$ref": "#/definitions/Node"
            },
            {
              "type": "null"
            }
          ]
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "tx"
      ]
    },
    "Blockchain": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "url": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "hasWallet": {
          "type": "boolean",
          "default": false
        },
        "launchedAt": {
          "type": "string",
          "format": "date-time"
        },
        "servers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Server"
          }
        }
      },
      "required": [
        "name",
        "url",
        "price"
      ]
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "node": {
      "$ref": "#/definitions/Node"
    },
    "server": {
      "$ref": "#/definitions/Server"
    },
    "payment": {
      "$ref": "#/definitions/Payment"
    },
    "blockchain": {
      "$ref": "#/definitions/Blockchain"
    }
  }
}