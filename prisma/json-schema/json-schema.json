{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "address": {
          "type": "string"
        },
        "password": {
          "type": [
            "string",
            "null"
          ]
        },
        "balance": {
          "type": "integer",
          "default": 0
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Node"
          }
        },
        "credits": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Credit"
          }
        }
      },
      "required": [
        "address"
      ]
    },
    "Node": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "server": {
          "$ref": "#/definitions/Server"
        },
        "wallet": {
          "type": [
            "string",
            "null"
          ]
        },
        "status": {
          "type": "string",
          "default": "CREATED",
          "enum": [
            "CREATED",
            "INSTALLING",
            "LIVE",
            "FAILED"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "nodeHistory": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NodeHistory"
          }
        },
        "payment": {
          "anyOf": [
            {
              "$ref": "#/definitions/Payment"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "userId",
        "serverId"
      ]
    },
    "NodeHistory": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "node": {
          "$ref": "#/definitions/Node"
        },
        "message": {
          "type": [
            "string",
            "null"
          ]
        },
        "status": {
          "type": "string",
          "default": "CREATED",
          "enum": [
            "CREATED",
            "INSTALLING",
            "LIVE",
            "FAILED"
          ]
        }
      },
      "required": [
        "nodeId"
      ]
    },
    "Server": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "host": {
          "type": "string",
          "default": ""
        },
        "port": {
          "type": "integer",
          "default": 22
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "active": {
          "type": "boolean"
        },
        "node": {
          "anyOf": [
            {
              "$ref": "#/definitions/Node"
            },
            {
              "type": "null"
            }
          ]
        },
        "blockchain": {
          "$ref": "#/definitions/Blockchain"
        }
      },
      "required": [
        "active",
        "blockchainId"
      ]
    },
    "Payment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "duration": {
          "type": "integer",
          "default": 0
        },
        "node": {
          "$ref": "#/definitions/Node"
        },
        "credit": {
          "type": "integer"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "nodeId",
        "credit"
      ]
    },
    "TxVerifier": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "verifier": {
          "type": "string"
        },
        "tx": {
          "type": [
            "number",
            "string",
            "boolean",
            "object",
            "array",
            "null"
          ]
        }
      },
      "required": [
        "verifier",
        "tx"
      ]
    },
    "Blockchain": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "url": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "hasWallet": {
          "type": "boolean",
          "default": false
        },
        "launchedAt": {
          "type": "string",
          "format": "date-time"
        },
        "servers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Server"
          }
        }
      },
      "required": [
        "name",
        "url",
        "price"
      ]
    },
    "Credit": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "tx": {
          "type": "string"
        },
        "credits": {
          "type": "integer"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "tx",
        "credits",
        "userId"
      ]
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "node": {
      "$ref": "#/definitions/Node"
    },
    "nodeHistory": {
      "$ref": "#/definitions/NodeHistory"
    },
    "server": {
      "$ref": "#/definitions/Server"
    },
    "payment": {
      "$ref": "#/definitions/Payment"
    },
    "txVerifier": {
      "$ref": "#/definitions/TxVerifier"
    },
    "blockchain": {
      "$ref": "#/definitions/Blockchain"
    },
    "credit": {
      "$ref": "#/definitions/Credit"
    }
  }
}