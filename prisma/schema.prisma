// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model user {
    id            Int             @unique @default(autoincrement())
    address       String          @unique
    name          String?
    role          Int             @default(1)
    running_nodes running_nodes[]
    payments      payments[]
}

model admins {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
    role     Int    @default(0)
}

model node_brand {
    id          Int        @id @default(autoincrement())
    name        String
    fee         Float
    description String?
    payments    payments[]
}

model running_nodes {
    id       Int      @id @default(autoincrement())
    user_id  Int
    name     String
    duration Int
    start    DateTime
    end      DateTime
    paid     Boolean
    user     user?    @relation(fields: [user_id], references: [id])
}

model payments {
    id        Int         @id @default(autoincrement())
    address   String?
    node_id   Int
    duration  Int
    amount    Int
    user_id   Int
    status    String
    charge_id String      @unique
    date      DateTime    @default(now())
    user      user?       @relation(fields: [user_id], references: [id])
    node      node_brand? @relation(fields: [node_id], references: [id])
}
